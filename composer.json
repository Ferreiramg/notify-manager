{
    "name": "ferreiramg/notify-manager",
    "description": "Laravel plugin for notification management with dispatch rules, logging, and monetization",
    "type": "library",
    "keywords": ["laravel", "notification", "plugin", "monetization", "messaging", "telegram", "slack", "email", "whatsapp"],
    "license": "MIT",
    "homepage": "https://github.com/Ferreiramg/notify-manager",
    "support": {
        "issues": "https://github.com/Ferreiramg/notify-manager/issues",
        "source": "https://github.com/Ferreiramg/notify-manager"
    },
    "authors": [
        {
            "name": "Lu√≠s Paulo Ferreira",
            "email": "luis@lpdeveloper.com.br",
            "homepage": "https://github.com/Ferreiramg"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0",
        "illuminate/database": "^11.0",
        "illuminate/console": "^11.0",
        "illuminate/config": "^11.0",
        "illuminate/events": "^11.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "NotifyManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotifyManager\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NotifyManager\\NotifyManagerServiceProvider"
            ],
            "aliases": {
                "NotifyManager": "NotifyManager\\Facades\\NotifyManager"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "pest --coverage"
        ],
        "test-coverage-html": [
            "@putenv XDEBUG_MODE=coverage", 
            "pest --coverage --coverage-html=coverage"
        ],
        "format": "pint",
        "format-check": "pint --test",
        "analyze": "phpstan analyse",
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
